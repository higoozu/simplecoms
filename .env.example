# Node env
NODE_ENV=production
PORT=8080

# Local testing switches
LOCAL_TEST=0
LOCAL_ADMIN_BYPASS=0

# Backup
BACKUP_ENABLED=true

# Email provider
EMAIL_PROVIDER=resend
RESEND_API_KEY=
SENDGRID_API_KEY=
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=Your Site
PUBLIC_SITE_URL=https://domain.com

# Cloudflare Turnstile
TURNSTILE_SECRET_KEY=

# Zero Trust admin
ADMIN_EMAILS=admin@example.com,editor@example.com
ALLOWED_COUNTRIES=
ADMIN_CONFIG_PATH=/app/config/admins.json
# ADMIN_PROFILES_JSON=[{"email":"admin@example.com","name":"Site Author","website":"https://example.com","avatar_url":"https://example.com/avatar.png"}]

# Logging
LOG_LEVEL=info
LOG_DIR=logs

# Domains
ADMIN_DOMAIN=comment-admin.yourdomain.com
API_DOMAIN=comment.yourdomain.com
PUBLIC_BASE_URL=https://comment.yourdomain.com
ALLOWED_ORIGINS=https://domain.com

# Feature toggles
ENABLE_COMMENT_MODERATION=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_AUDIT_LOG=true
ENABLE_APPROVAL_EMAILS=true
ENABLE_TELEGRAM_NOTIFICATIONS=true

# Settings defaults
AUTO_APPROVE=false
REQUIRE_EMAIL=true
MAX_COMMENT_LENGTH=5000
MIN_COMMENT_LENGTH=1
COMMENT_MODERATION_EMAIL=
AUTO_APPROVE_THRESHOLD=0.3
ENABLE_NESTED_EMAILS=true

# Akismet
AKISMET_KEY=
AKISMET_BLOG=https://your-blog-domain.com
SPAM_THRESHOLD=0.7
TOKEN_SECRET=change_me

# Gravatar
GRAVATAR_CDN=https://www.gravatar.com/avatar
GRAVATAR_DEFAULT_THEME=identicon

# Telegram notifications
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
